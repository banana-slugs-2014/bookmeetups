<%= form_for :users_books, url: user_create_path(current_user.id), method: :post do |book| %>
      <%= book.submit "Add book" %>
      <%= book.text_field(:add, size: "50") %>
<% end %>

<div class="user_books_table">
  <ul>
    <% @books.each do |book| %>
      <li><img src="<%= book.photo_link(1) %>" alt="book cover"><%= link_to book.title, book_path(book.id) %> <%= book.author %></li>
    <% end %>
  </ul>



</div>


