<div class="profile_pic">
  <h1><%= @user.username.capitalize %></h1>
  <% if @user.photo %>
    <%= render partial: "photos/show", locals: { user: @user } %>
  <% end %>
</div>

<% if current_user != @user %>
  <h4><%= !@user.location.nil? ? "#{@user.location.city}, #{@user.location.state} #{@user.location.zip}" : "No location set." %></h4>
  <ul>
    <p>Books in Common with <%= @user.username.capitalize %>:</p>
    <% books_in_common_with(@user).each do |book| %>
      <li>
        <div class="book-display">
          <div class="overlay">
            <span><%= book.title %></span>
            <%= link_to "Meet Up!", user_create_meetup_path(@user, book) %>
        </div>
          <%= link_to image_tag(book.photo_link(2)), book_path(book.id) %>
        </div>
      </li>
    <% end %>
  </ul>

  <ul>
    <p><%= @user.username.capitalize %>'s Books:</p>
    <% other_books_of(@user).each do |book| %>
      <li>
        <div class="book-display">
          <%= link_to image_tag(book.photo_link(2)), book_path(book.id) %>
        </div>
      </li>
    <% end %>
  </ul>

<% else %>
  <h4><%= !@user.location.nil? ? @user.location.city : "No location set." %></h4>
  <ul>
    <% @user.books.each do |book| %>
      <li>
        <div class="book-display">
          <div class="overlay">
            <p>book.title</p>
          </div>
          <p class="crop"><%= link_to image_tag(book.photo_link(2)), book_path(book.id) %></p>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to "Edit My Profile", edit_user_path(current_user) %>
<% end %>


