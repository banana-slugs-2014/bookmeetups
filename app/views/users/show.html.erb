<div class="profile_pic">
  <%= render partial: "photos/show", locals: { user: @user } %>
</div>
<div class="info">
  <h3><%= @user.username.capitalize %>'s Book Buddies!</h3>
  <h4><%= !@user.location.nil? ? "#{@user.location.city}, #{@user.location.state}" : "No location set." %></h4>
  <% if @user == current_user %>
    <%= link_to "Edit My Profile", edit_user_path(current_user) %>
  <% end %>
</div>

<div class="friends_list">
  <% current_user.book_friends.each do |friend|  %>
    <div class="friend_links">
      <h4><%= friend.username %></h4>
      <%= link_to render( partial: "photos/show", locals: { user: friend }), user_favorite_books_path(friend) %>
    </div>
  <% end %>
</div>
