<!-- goes to user#update -->
<div class="edit_user">
  <header><h1>Edit User info</h1></header>
  <%= form_for :user, url: user_path, method: :put do |user| %>
        City
        <%= user.text_field(:city, size: "30", value: current_user.location.blank? ? "Please enter your city" : current_user.location.city) %>
        State
        <%= user.text_field(:state, size: "20", value: current_user.location.blank? ? "Input state" : current_user.location.state) %>
        Zip
        <%= user.text_field(:zip, size: "15", value: current_user.location.blank? ? "Zip code" : current_user.location.zip) %>
        <%= user.submit "Edit Profile" %>
  <% end %>
  <%= link_to "Add New Profile Pic", new_user_photo_path(@user) %>
</div>