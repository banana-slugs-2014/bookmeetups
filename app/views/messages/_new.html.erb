<div class="new-message-form">
  <%= form_for [@meetup, @message], :remote => true do |f| %>
    <%= hidden_field_tag(:user_id, current_user.id) %>
    <%= f.text_area :text, :required => true %>
    <%= submit_tag "Post Message", :class => "new-message" %>
  <% end %>
  <%= link_to "Cancel", root_path, :class=> "cancel" %>
</div>